<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jtcoding.springbootmultidatasource.dao.first.UserDao">

    <resultMap id="userMapping" type="com.jtcoding.springbootmultidatasource.model.User">
        <result column="username" property="username" javaType="String"/>
        <result column="password" property="password" javaType="String"/>
        <result column="user_num" property="userNum" javaType="Integer"/>
    </resultMap>

    <insert id="addUser" keyProperty="userNum" useGeneratedKeys="true"
            parameterType="com.jtcoding.springbootmultidatasource.model.User">
        INSERT INTO user (
            username, password
        ) VALUES (
            #{username}, #{password}
        )
    </insert>

    <delete id="deleteUser">
        DELETE FROM user WHERE user_num = #{userNum}
    </delete>

    <select id="getUser" resultMap="userMapping">
        SELECT * FROM user WHERE user_num = #{userNum}
    </select>

</mapper>